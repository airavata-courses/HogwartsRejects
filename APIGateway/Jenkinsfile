node {
    stage("Git clone") {
        git branch: 'feature-api-gw', url: 'https://github.com/airavata-courses/HogwartsRejects.git'
    }

    stage("Build Docker Image") {
         sh "docker build -t vivekshresta/api-gateway /var/lib/jenkins/workspace/APIGateway/APIGateway/"
    }

    stage("Docker image push") {
        withCredentials([string(credentialsId: 'DockerPassword', variable: 'DockerPassword')]) {
            sh "docker login -u vivekshresta -p ${DockerPassword}"
        }
        sh "docker push vivekshresta/api-gateway"
    }
}
